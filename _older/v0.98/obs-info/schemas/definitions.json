{
    "format_version": {
        "description": "Version of this file's schema",
        "type": "string",
        "minLength": 3,
        "pattern": "^0\\.98$"
    },
    "facility": {
        "description" : "facility reference name (should be same as second word of filename)",
        "type": "string"
    },
    "revision": {
        "description": "Date provenance of instrumentation information",
        "type": "object",
        "required": ["date","authors"],
        "properties": {
            "date": { "$ref": "#/date" },
            "authors": {
                "type": "array",
                "minItems" : 1,
                "items" : {"$ref": "#/author"}
            }
        }
    },
    "reference_name": {
        "type": "string",
        "description": "campaign or facility reference name"
    },
    "URI_ref": {
        "type": "object",
        "description": "URI to file containing information to be loaded here",
        "required" : ["$ref"],
        "properties" : { "$ref" : {"type":"string"} },
        "additionalProperties" : false
    },
    "author" : {
        "type": "object",
        "required": ["first_name", "last_name"],
        "properties": {
          "first_name": {"type": "string"},
          "last_name": {"type": "string"},
          "email": {"type": "string", "format": "email"},
          "phones": {"type": "array", "items": {"$ref": "#/phone"}}
        }
    },
    "comments": {
        "type" : "array",
        "description" : "list of comments",
        "minItems": 0,
        "items" : { "type" : "string", "minLength" : 1 }
    },
    "phone": {
        "type": "string",
        "description": "...",
        "pattern": "^[0-9]+-[0-9]+$"
    },
    "email": {
        "type": "string",
        "format": "email"
    },
    "website": {
        "type": "string",
        "format": "uri"
    },
    "date": {
        "type": "string",
        "description": "Date in yyyy-mm-dd format",
        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "date_or_null": {
        "anyOf": [
            {
                "type" : "string",
                "description" : "yyyy-mm-dd date",
                "pattern" : "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
            },
            {   "type" : "null" }
        ]
    },
    "string_or_null": { 
        "type" : [ "string" , "null" ]
    },
    "date-time-Z": {
        "anyOf" : [
            {
                "type": "string",
                "description": "Date-time in ISO format with Z for GMT+0",
                "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}(\\.[0-9]*)?Z$"
            },
            { "type" : "null" }
        ]
    }
}
