{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Response",
	"description": "OBS instrument/stage response files. Stages will be ordered sensor -> ana_filter -> datalogger",
	"type": "object",
	"required": [ "stages","format_version" ],
	"properties": {
	    "format_version" : {"$ref" : "file:definitions.json#/format_version"},
	    "stages" :         {"$ref" : "#/definitions/stages" },
	    "revision" :       {"$ref" : "file:definitions.json#/revision"}
	},
	"definitions": {
	    "stages" : {
	        "type" : "array",
	        "minItems": 1,
	        "description" : "list of response stages",
	        "items" : {
                "response_stage": { "$ref" : "#/definitions/response_stage" }
	        }
	    },
        "response_stage": {
            "type" : "object",
            "description" : "Response type",
            "required" : [
                "input_units",
                "output_units",
                "gain",
                "response"
            ],
            "properties": {
                "input_units":        { "$ref" : "#/definitions/stage_io_units" },
                "output_units":       { "$ref" : "#/definitions/stage_io_units" },
                "gain" :              { "$ref" : "#/definitions/gain" },
                "decimation_factor":  { "type" : "integer", "description": "DecimationType:Factor"},
                "input_sample_rate" : { "type" : "number",  "description": "DecimationType:InputSampleRate"},
                "delay_correction" :  { "type" : "number",  "description": "DecimationType:Correction"},
                "description":        { "type" : "string",  "description": "BaseFilterType:Description"},
                "name":               { "type" : "string",  "description": "BaseFilterType:name"},
                "filter" :            { "$ref" : "filter.schema.json#/definitions/filter"},
                "DBIRD_response_type": {"type" : "string","description": "examples: 'THEORETICAL', 'CALIBRATION'"}
            }
        },	        
        "stage_io_units": { 
            "description": "units entering or exiting stage (e.g., 'V', 'PA', 'COUNTS')",
            "type": "string",
            "pattern": "[A-Z/*12-]+"
        },
        "gain" : { 
            "type" : "object",
            "description": "output units / input unit.  (Called sensitivity in DBIRD)",
            "required" : ["value", "frequency"],
            "properties" : {
                "value" : {"type" : "number"},
                "frequency" : {
                    "type" : "number",
                    "description": "Hz",
                    "default": 0
                }
            }
        }
    }
}